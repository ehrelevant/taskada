{
  "$schema": "https://turborepo.com/schema.json",
  "globalEnv": ["DATABASE_URL", "XENDIT_SECRET_KEY", "EXPO_PUBLIC_API_URL", "PORT", "GOOGLE_MAPS_API_KEY", "EXPO_PUBLIC_GOOGLE_MAPS_API_KEY"],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^dev"]
    },
    "dev:android": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^dev:android"]
    },
    "dev:ios": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^dev:ios"]
    }
  }
}
